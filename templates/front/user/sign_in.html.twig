{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
<div class="container mx-auto">

<div class="flex flex-col justify-center items-center px-6 py-12 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:min-w-sm">
        <img class="sm:w-96 md:w-2/3 md:h-1/2 mx-auto" src="https://images.pexels.com/photos/134643/pexels-photo-134643.jpeg" alt="photo d'une ville de nuit avec de grands immeubles et deux routes Ã  deux voies chacune">
        <div class="flex justify-center w-auto">
        <h2 class="my-5 mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900 w-fit">Inscription</h2>
        </div>
    </div>
    <div class="flex justify-center bg-slate-100 w-screen md:w-1/2">

        <div class="flex justify-center bg-white shadow-md rounded px-8 pt-6 pb-8 my-10">

        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
            {{ form_widget(form) }}
            <button class="flex w-full justify-center rounded-md bg-black px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-gray-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 mt-3">{{ button_label|default('Sauvegarder') }}</button>
        {{ form_end(form) }}
        
        </div>
    </div>
</div>

{% endblock %}
