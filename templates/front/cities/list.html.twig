                            {# <h2 class="flex justify-center text-xl">Villes triées par ordre descendant :</h2> #}
                        {% endif %}

                        {% include 'partials/_cities_list.html.twig' %}

                    {% else %}

                        {% include 'partials/_cities_list.html.twig' %}

                    {% endif %}

                {% endfor %}

            </div>

        </div>

        <div class="pagination flex justify-center">
            {{ knp_pagination_render(citiesCountry) }}
        </div>

    {% elseif isCitiesList %}
