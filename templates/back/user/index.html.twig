{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}


<div class="py-5 text-center">
    <h1 class="form">User index</h1>

    <div class="overflow-x-auto">
        <table class="table-auto w-full border-collapse border border-gray-300">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Email</th>
                    <th>Roles</th>
                    <th>Password</th>
                    <th>Firstname</th>
                    <th>Lastname</th>
                    <th>Username</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                    <td>{{ user.password }}</td>
                    <td>{{ user.firstname }}</td>
                    <td>{{ user.lastname }}</td>
                    <td>{{ user.username }}</td>
                    <td>
                        <a href="{{ path('app_back_user_edit', {'id': user.id}) }}">
                            <button type="button" class="my-2 flex justify-center focus:outline-none text-white bg-blue-900 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 text-base font-medium leading-6 rounded-lg px-3 py-1.5 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-purple-900">Show</button>
                        </a>
                        <a href="{{ path('app_back_user_edit', {'id': user.id}) }}">
                            <button type="button" class="my-2 flex justify-center focus:outline-none text-white bg-orange-700 hover:bg-orange-600 focus:ring-4 focus:ring-orange-300 text-base font-medium leading-6 rounded-lg px-3 py-1.5 dark:bg-orange-400 dark:hover:bg-orange-500 dark:focus:ring-orange-700">Edit</button>
                        </a>

                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>


    <a href="{{ path('app_back_user_new') }}">
        <button type="button" class="my-2 flex justify-center focus:outline-none text-white bg-green-900 hover:bg-green-800 focus:ring-4 focus:ring-green-300 text-base font-medium leading-6 rounded-lg px-3 py-1.5 dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-900">Create new</button>
    </a>

{% endblock %}
