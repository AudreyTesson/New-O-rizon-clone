{% extends 'base.html.twig' %}

{% block title %}Country{% endblock %}

{% block body %}
    <h1>Country</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ country.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ country.name }}</td>
            </tr>
            <tr>
                <th>Visa</th>
                <td>{{ country.visa }}</td>
            </tr>
            <tr>
                <th>VisaIsRequired</th>
                <td>{{ country.visaIsRequired ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Currency</th>
                <td>{{ country.currency }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ country.createdAt ? country.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ country.updatedAt ? country.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_back_country_index') }}">back to list</a>

    <a href="{{ path('app_back_country_edit', {'id': country.id}) }}">edit</a>

    {{ include('back/country/_delete_form.html.twig') }}
{% endblock %}
