<header>
    <nav class="border-gray-200 p-1 bg-cyan-900">
        <div class="container mx-auto flex flex-wrap items-center justify-between">
            <a href="{{ path('default') }}" class="flex">
                <img src="{{ asset('images/logo_image.png') }}" class=" flex-row md:h-16 md:mx-1 hidden md:block rounded-full" alt="Logo New O'Rizon">
                <span class="self-center text-2xl md:text-5xl font-semibold whitespace-nowrap text-white ml-3">New O'Rizon</span>
            </a>

            <a href="{{ path('cities_list') }}" class="hidden md:block flex self-center ml-auto md:text-sm lg:text-xl font-semibold whitespace-nowrap text-white ml-3">Liste des villes
