                            <svg xmlns="http://www.w3.org/2000/svg" height="2em" viewBox="0 0 448 512" fill="white">
                                
                                <path d="M224 256A128 128 0 1 0 224 0a128 128 0 1 0 0 256zm-45.7 48C79.8 304 0 383.8 0 482.3C0 498.7 13.3 512 29.7 512H418.3c16.4 0 29.7-13.3 29.7-29.7C448 383.8 368.2 304 269.7 304H178.3z"/>
                            </svg>
                        </button>
                        <!-- Dropdown menu -->
                        <div id="dropdownNavbar" class="hidden bg-white text-base z-10 list-none divide-y divide-gray-700 rounded shadow my-4 w-44 border-gray-700">
                            <ul class="py-1" aria-labelledby="dropdownLargeButton">
                            {% if is_granted("IS_AUTHENTICATED_FULLY") %} 
                            {% set user = app.user %}
                            {# ! add path() user perfil #}
                                <li>
                                    <a href="#" class="text-md hover:bg-gray-100 text-gray-700 block px-4 py-2">{{ user.firstname }} {{ user.lastname }}</a>
                                </li>
                                <li class="hidden lg:block">
                                    <a href="{{ path('favorites') }}" class="text-md hover:bg-gray-100 text-gray-700 block px-4 py-2">Mes favoris</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="{{ path('app_back_default')}}">Backoffice</a>
