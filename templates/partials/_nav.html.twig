                            </div>
                            {% else %}
                            <div class="p-1">
                                <a href="{{ path('app_login') }}" class="text-md hover:bg-gray-100 text-gray-700 block px-2 py-2">Inscription/Connexion</a>
                            </div>
                            {% endif %}   
                        </div>
